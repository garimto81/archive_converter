# PokerGO Downloader Backend Configuration

# Server
POKERGO_HOST=0.0.0.0
POKERGO_PORT=8080
POKERGO_DEBUG=false

# Database
POKERGO_DATABASE_PATH=data/pokergo.db

# Download
POKERGO_DOWNLOAD_PATH=downloads
POKERGO_DEFAULT_QUALITY=Best
POKERGO_MAX_CONCURRENT_DOWNLOADS=2

# PokerGO Credentials (optional, can be set via UI)
# POKERGO_POKERGO_EMAIL=your_email@example.com
# POKERGO_POKERGO_PASSWORD=your_password

# CORS (comma-separated)
POKERGO_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
